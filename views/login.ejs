<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ./partials/_head %>
  </head>
  <header>
    <% include ./partials/_header %>
  </header>
  <body style="font-size:20px; padding:50px;">
    <% if (message !== "") { %>
      <h4 style="color: red;"><%= message %></h4>
    <% } %>
    <% if (!users) { %>
    <form action="/login" method="POST">
      <input type="email" name="email" placeholder="example@abc.xyz" style="width: 300px">
      <input type="password" name="password" placeholder="********" style="width: 300px">
      <input type="submit" class="waves-effect waves-light btn" value="Login">
    </form>
    <% } %>
  </body>
  <footer>
    <% include ./partials/_footer %>
  </footer>
</html>
