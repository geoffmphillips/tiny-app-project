<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ./partials/_head %>
  </head>

  <header>
    <% include ./partials/_header %>
  </header>

  <body style="font-size:20px; padding:50px;">
    <ul>
      <table>
        <% for (let url in urls) { %>
          <tr>
            <td><form method="POST" action="/urls/<%= url %>/delete"><%= url %> &rarr; <%= urls[url] %></td>
            <td><a href="/urls/<%= url %>/"><strong>Edit</strong></a></td>
            <td><input type="submit" class="btn-danger" value="Delete"></td>
            </form>
          </tr>
        <% } %>
      </table>
    </ul>
  </body>

  <footer>
    <a href="/urls/new">Shorten a new URL!</a>
    <% include ./partials/_footer %>
  </footer>
</html>
