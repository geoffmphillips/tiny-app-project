<h3>Sterns & Caulfield - Affordable luxury URL Shortening</h3>

<% if (!username) { %>
<form action="/login" method="POST">
  <input id="name" type="text" name="name" placeholder="Enter your username" style="width: 300px">
  <input type="submit" value="Sign In">
</form>
<% } else { %>
  <form action="/logout" method="POST">
    <%= username %><input type="submit" value="Log Out">
  </form>
<% } %>
